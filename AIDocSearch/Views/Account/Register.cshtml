@model DataTransferObject.DTO.Requests.DTORegisterRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registration Page";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link href="\bootstrap\css\bootstrap.min.css" rel="stylesheet" />

    <!--Fontawesome CDN-->

    <link href="~/fontawesome/css/all.min.css" rel="stylesheet" />
    <script src="~/js/crypto-js.min.js"></script>
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    
    <link href="\css\login.css" rel="stylesheet" />
    <link href="~/css/register.css" rel="stylesheet" />
</head>
<body>
    <canvas id="canvas"></canvas>

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header text-center">
                    <img src="~/images/logo.png"
                         alt="Logo"
                         class="app-logo mx-auto d-block" />
                    <h3>Log in</h3>
                    @* <div class="d-flex justify-content-end social_icon">
                        <span><i class="fa-solid fa-file-pdf"></i></span>
                        <span><i class="fa-solid fa-file-word"></i></span>
                    </div> *@
                </div>
                <div class="card-body">
                    <form action="Register" autocomplete="off" method="post" role="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="aesKey" value="@ViewBag.hdns" />
                        <div class="form-group row mb-3">
                            <label asp-for="UserName" class="col-sm-3 col-form-label text-white"></label>
                            <div class="col-sm-9">
                                <input asp-for="UserName" class="form-control" value="@ViewBag.UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row mb-3 ">
                            <label asp-for="RankId" class="col-sm-3 col-form-label text-white"></label>
                            <div class="col-sm-9">
                                <select asp-for="RankId" class="form-select" required>
                                    <option value="">Select Rank</option>

                                </select>
                                <span asp-validation-for="RankId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3 ">
                            <label asp-for="Name" class="col-sm-3 col-form-label text-white"></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-3 ">
                            <label asp-for="Password" class="col-sm-3 col-form-label text-white"></label>
                            <div class="col-sm-9">
                                <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-3 ">
                            <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label text-white"></label><div class="col-sm-9">
                                <input asp-for="ConfirmPassword" class="form-control " placeholder="Confirm Password" autocomplete="off" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-3 ">
                            <label asp-for="Role" class="col-sm-3 col-form-label text-white"></label>
                            <div class="col-sm-9">
                                <select asp-for="Role" class="form-select" required>
                                    <option value="@ViewBag.RoleName">@ViewBag.RoleName</option>

                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-3 text-center">
                            <div class="col-sm-12">
                                <button type="submit" class="btn login_btn ">Create</button>
                            </div>
                        </div>
                        <div class="alert mt-2">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <div>@error.ErrorMessage</div>
                                    }
                                </div>
                            }
                            @if (Convert.ToString(TempData["SuccessMessage"]) != "")
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }
                        </div>
                    </form>
                </div>

             
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/devjs/mtable.js"></script>
<script src="~/sweetalert2/sweetalert2.min.js"></script>
<script src="~/devjs/registration.js"></script>