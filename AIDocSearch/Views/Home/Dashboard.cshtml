@*
    Dashboard page using Bootstrap with a Google-like search box and button.
*@
@{
    ViewData["Title"] = "Dashboard";
    // Replace with actual user name retrieval logic as needed
    var userName = User.Identity?.IsAuthenticated == true ? User.Identity.Name : "Guest";
}

<script src="~/devjs/suggestion.js"></script>
<link href="~/css/search.css" rel="stylesheet" />
<div class="container mt-5 d-flex flex-column align-items-center">

    <img src="~/images/logo.png"
         alt="Logo"
         class="app-logo-large mx-auto d-block" />

    <h2 class="welcome-title mb-4 fw-bold text-primary">
        Welcome, Indian Army IntelliSearch
    </h2>

    <h4 class="welcome-subtitle mb-4 text-secondary">
        Your Smart Document Exploration and Search Engine!
    </h4>

    <form id="searchForm"
          method="post"
          action="/Search/Index"
          class="w-100 search-form">

        <div class="input-group input-group-lg mb-lg-5">

            <span class="input-group-text bg-white border-end-0">
                <img src="~/images/Search.png"
                     alt="Search"
                     class="search-icon" />
            </span>

            <input type="text"
                   id="searchInput"
                   name="searchInput"
                   class="form-control border-start-0"
                   placeholder="Search..."
                   aria-label="Search"
                   autofocus
                   autocomplete="off" />

            <button id="searchBtn"
                    class="btn btn-primary"
                    type="submit">
                Search
            </button>

            <div id="suggestions"></div>
            
        </div>
        <span class="msgerror alert alert-danger ml-4 d-none" ></span>
    </form>
</div>

